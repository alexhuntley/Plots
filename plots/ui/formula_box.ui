<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="FormulaBox" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkBox">
        <property name="margin-start">4</property>
        <property name="margin-end">4</property>
        <property name="margin-top">4</property>
        <property name="margin-bottom">4</property>
        <child>
          <object class="GtkScrolledWindow" id="editor_scroll">
            <property name="focusable">1</property>
            <property name="valign">center</property>
            <property name="hexpand">1</property>
            <property name="vscrollbar-policy">never</property>
            <property name="propagate-natural-height">1</property>
            <property name="hexpand">1</property>
            <property name="child">
              <object class="GtkViewport" id="editor_viewport">
                <child>
                  <placeholder/>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="button_box">
            <property name="visible">True</property>
            <property name="can-focus">False</property>
            <property name="halign">end</property>
            <property name="valign">start</property>
            <property name="orientation">vertical</property>
            <style>
              <class name="linked"/>
            </style>
            <child>
              <object class="GtkButton" id="delete_button">
                <property name="focusable">1</property>
                <property name="receives-default">1</property>
                <property name="tooltip-text" translatable="yes">Remove</property>
                <child>
                  <object class="GtkImage">
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <property name="icon-name">edit-delete-symbolic</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <placeholder/>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="slider_box">
        <property name="margin-start">4</property>
        <property name="margin-end">4</property>
        <property name="margin-bottom">4</property>
        <child>
          <object class="GtkEntry" id="slider_lower">
            <property name="focusable">1</property>
            <property name="width-chars">4</property>
            <property name="input-purpose">number</property>
            <property name="width-request">10</property>
          </object>
        </child>
        <child>
          <object class="GtkScale" id="slider">
            <property name="width-request">120</property>
            <property name="focusable">1</property>
            <property name="round-digits">3</property>
            <property name="hexpand">1</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="slider_upper">
            <property name="focusable">1</property>
            <property name="width-chars">4</property>
            <property name="input-purpose">number</property>
            <property name="hexpand">0</property>

          </object>
        </child>
        <child>
          <object class="GtkButton" id="animate_button">
            <property name="focusable">1</property>
            <property name="receives_default">1</property>
            <property name="tooltip-text" translatable="yes">Animate Variable</property>
            <property name="hexpand">0</property>
            <property name="margin-start">4</property>
            
            <child>
              <object class="GtkImage" id="animate_icon">
                <property name="icon_name">media-playback-start</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <style>
      <class name="formula_box"/>
    </style>
  </template>
</interface>
